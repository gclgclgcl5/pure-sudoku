/* 统计页面样式 - 宁静青蓝主题 */
page {
  background: linear-gradient(180deg, #F8FAFB 0%, #EDF5F5 100%);
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 顶部摘要卡片 */
.summary-card {
  background: linear-gradient(135deg, #5EAAA8, #4A8886);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(94, 170, 168, 0.25);
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.summary-icon {
  font-size: 36rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.summary-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1;
}

.summary-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 区域标题 */
.section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C5F5D;
}

/* 数据卡片 */
.data-cards {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.data-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(94, 170, 168, 0.1);
}

.data-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.data-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.data-label {
  font-size: 24rpx;
  color: #6B9A99;
}

.data-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C5F5D;
}

/* 最佳时间 */
.best-times {
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 16rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(94, 170, 168, 0.1);
}

.time-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.time-item:last-child {
  border-bottom: none;
}

.time-label {
  font-size: 28rpx;
  color: #6B9A99;
}

.time-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #5EAAA8;
  font-family: 'Courier New', monospace;
}

/* 操作按钮 */
.actions {
  margin-top: 20rpx;
  padding: 0 8rpx;
}

.reset-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #E89BA3, #D88891);
  color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(232, 155, 163, 0.3);
  transition: all 0.3s ease;
}

.reset-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(232, 155, 163, 0.4);
}

.reset-icon {
  font-size: 32rpx;
}

.reset-text {
  color: #ffffff;
}

/* 底部提示 */
.footer {
  margin-top: 20rpx;
  padding: 20rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #9BBCBB;
  line-height: 1.6;
}

/* 动画效果 */
.summary-card {
  animation: slideDown 0.5s ease-out;
}

.data-card {
  animation: slideIn 0.5s ease-out;
}

.data-card:nth-child(1) { animation-delay: 0.1s; }
.data-card:nth-child(2) { animation-delay: 0.15s; }
.data-card:nth-child(3) { animation-delay: 0.2s; }

.time-item {
  animation: fadeIn 0.5s ease-out;
}

.time-item:nth-child(1) { animation-delay: 0.1s; }
.time-item:nth-child(2) { animation-delay: 0.15s; }
.time-item:nth-child(3) { animation-delay: 0.2s; }
.time-item:nth-child(4) { animation-delay: 0.25s; }

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

