/* 开始页面样式 - 宁静青蓝主题 */
page {
  background: linear-gradient(180deg, #F8FAFB 0%, #EDF5F5 100%);
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  padding-bottom: 120rpx; /* 为TabBar留出空间 */
}

/* 顶部标题区域 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2C5F5D;
  margin-bottom: 10rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #6B9A99;
  letter-spacing: 2rpx;
}

/* 菜单列表 */
.menu-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(94, 170, 168, 0.15);
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(94, 170, 168, 0.2);
}

.menu-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 移除背景色，让图标更好融入主题 */
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C5F5D;
}

.menu-desc {
  font-size: 24rpx;
  color: #6B9A99;
}

.menu-arrow {
  font-size: 48rpx;
  color: #D4E8E7;
  font-weight: 300;
}

/* 底部版本信息 */
.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-top: 40rpx;
  padding: 20rpx 0;
}

.version {
  font-size: 24rpx;
  color: #9BBCBB;
}

.copyright {
  font-size: 22rpx;
  color: #D4E8E7;
}

/* 动画效果 */
.menu-item {
  animation: slideIn 0.5s ease-out;
}

.menu-item:nth-child(1) {
  animation-delay: 0.1s;
}

.menu-item:nth-child(2) {
  animation-delay: 0.2s;
}

.menu-item:nth-child(3) {
  animation-delay: 0.3s;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

