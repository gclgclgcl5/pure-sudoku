/* 设置页面样式 - 宁静青蓝主题 */
page {
  background: linear-gradient(180deg, #F8FAFB 0%, #EDF5F5 100%);
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 区域标题 */
.section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C5F5D;
}

.section-desc {
  font-size: 24rpx;
  color: #6B9A99;
  padding: 0 8rpx;
  margin-bottom: 16rpx;
}

/* 主题网格 */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

/* 主题卡片 */
.theme-card {
  position: relative;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(94, 170, 168, 0.1);
  transition: all 0.3s ease;
  border: 3rpx solid transparent;
}

.theme-card:active {
  transform: scale(0.98);
}

.theme-card.active {
  border-color: #5EAAA8;
  box-shadow: 0 4rpx 16rpx rgba(94, 170, 168, 0.25);
  transform: translateY(-4rpx);
}

/* 选中标记 */
.theme-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #5EAAA8, #4A8886);
  border-radius: 50%;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  z-index: 10;
  animation: checkBounce 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes checkBounce {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 主题预览区 */
.theme-preview {
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f7fafc;
}

/* 迷你九宫格 - 3x3网格 */
.preview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rpx;
  padding: 12rpx;
  background: #e2e8f0;
}

.preview-cell {
  aspect-ratio: 1;
  border-radius: 4rpx;
  transition: all 0.2s ease;
}

/* 主题色带 */
.color-strip {
  display: flex;
  height: 24rpx;
}

.color-block {
  flex: 1;
  transition: all 0.2s ease;
}

/* 主题信息 */
.theme-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 0;
}

.theme-icon {
  font-size: 36rpx;
  line-height: 1;
}

.theme-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #2C5F5D;
  line-height: 1.2;
}

.theme-desc {
  font-size: 20rpx;
  color: #9BBCBB;
  text-align: center;
  line-height: 1.3;
}

/* 设置列表 */
.settings-list {
  background: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(94, 170, 168, 0.1);
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #e2e8f0;
  transition: background 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #f7fafc;
}

.setting-item.disabled {
  opacity: 0.6;
}

.setting-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.setting-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.setting-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.setting-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C5F5D;
}

.setting-tag {
  font-size: 20rpx;
  color: #ffffff;
  background: #ed8936;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #6B9A99;
  line-height: 1.5;
}

.setting-value {
  font-size: 22rpx;
  color: #5EAAA8;
}

.setting-arrow {
  font-size: 40rpx;
  color: #cbd5e0;
  font-weight: 300;
}

/* 操作按钮列表 */
.action-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(94, 170, 168, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(94, 170, 168, 0.15);
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 28rpx;
  color: #2C5F5D;
  font-weight: 500;
}

/* 版本信息 */
.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-top: 40rpx;
  padding: 20rpx;
}

.version {
  font-size: 24rpx;
  color: #9BBCBB;
}

.copyright {
  font-size: 22rpx;
  color: #D4E8E7;
}

/* 动画效果 */
.theme-card {
  animation: fadeInUp 0.5s ease-out backwards;
}

.theme-card:nth-child(1) { animation-delay: 0.05s; }
.theme-card:nth-child(2) { animation-delay: 0.1s; }
.theme-card:nth-child(3) { animation-delay: 0.15s; }
.theme-card:nth-child(4) { animation-delay: 0.2s; }
.theme-card:nth-child(5) { animation-delay: 0.25s; }
.theme-card:nth-child(6) { animation-delay: 0.3s; }

.action-btn {
  animation: fadeInUp 0.5s ease-out backwards;
}

.action-btn:nth-child(1) { animation-delay: 0.35s; }
.action-btn:nth-child(2) { animation-delay: 0.4s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

