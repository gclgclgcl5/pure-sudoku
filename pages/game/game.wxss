/* 游戏页面样式 - 优化版 */
page {
  background-color: #f0f2f5;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f0f2f5 0%, #e2e8f0 100%);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  padding-bottom: 40rpx; /* 减少底部留白，工具栏不再固定底部 */
}

/* 顶部信息栏 - 新布局，更紧凑 */
.info-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #4299e1, #3182ce);
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(66, 153, 225, 0.3);
  gap: 8rpx;
}

/* 新游戏按钮（在信息栏内）- 优化尺寸 */
.info-new-game-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
  background: rgba(255, 255, 255, 0.25);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 8rpx;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  min-width: 80rpx;
  transition: all 0.2s;
}

.info-new-game-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.new-game-icon {
  font-size: 24rpx;
  color: #ffffff;
}

.new-game-label {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 500;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
  flex: 1;
  min-width: 0;
}

.info-label {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
}

/* 难度显示值（只读） */
.info-value {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
  padding: 2rpx 10rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
}

/* 错误计数 */
.error-item {
  flex-direction: row;
  gap: 6rpx;
  align-items: center;
}

.error-icon {
  font-size: 24rpx;
}

.error-count {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 计时器 */
.timer-item {
  flex-direction: row;
  gap: 6rpx;
  align-items: center;
}

.timer-icon {
  font-size: 24rpx;
}

.timer-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
  font-family: 'Courier New', monospace;
  min-width: 90rpx;
  text-align: center;
}

/* 最佳时间 - 更紧凑 */
.best-time {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #fff3cd;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.best-time-label {
  font-size: 22rpx;
  color: #856404;
  font-weight: 500;
}

.best-time-value {
  font-size: 24rpx;
  color: #856404;
  font-weight: bold;
  font-family: 'Courier New', monospace;
}

/* 移除旧的新游戏按钮样式（已移到信息栏内） */

/* 广告位预留区域 */
.ad-placeholder {
  margin-top: 20rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #f0f2f5, #e2e8f0);
  border: 2rpx dashed #cbd5e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 160rpx;
}

.ad-text {
  font-size: 28rpx;
  color: #a0aec0;
  font-weight: 500;
}

/* 数独棋盘 - 使用固定尺寸 */
.board {
  display: grid;
  grid-template-columns: repeat(9, 73rpx);  /* 直接指定每列宽度 */
  gap: 2rpx;  /* 格子之间的间距 */
  background-color: #2d3748;
  padding: 4rpx;  /* 外边距 */
  border-radius: 8rpx;
  margin: 0 auto;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
  position: relative;
  transition: all 0.3s ease;
}

/* 暂停状态的棋盘 - 移除模糊效果 */
.board.paused {
  /* 不需要模糊效果 */
}

/* 单元格 - 固定尺寸 */
.cell {
  width: 73rpx;
  height: 73rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s ease;
  position: relative;
}

.cell-text {
  font-size: 36rpx;  /* 数字大小 */
  color: #2d3748;
  font-weight: 500;
  transition: all 0.15s ease;
}

/* 固定数字（初始题目） - 深灰色背景 */
.cell.fixed {
  background-color: #e2e8f0;
}

.cell.fixed .cell-text {
  color: #1a202c;
  font-weight: 700;
}

/* 选中状态 - 深蓝色高亮 */
.cell.selected {
  background-color: #4299e1 !important;
  box-shadow: inset 0 0 0 4rpx #2b6cb0;
  z-index: 10;
}

.cell.selected .cell-text {
  color: #ffffff;
  font-weight: 700;
  font-size: 40rpx;
}

/* 相关区域（同行/同列/同宫格） - 浅蓝色 */
.cell.related {
  background-color: #e6f2ff;
}

/* 相同数字 - 浅黄色高亮 */
.cell.same-number {
  background-color: #fef5e7 !important;
  box-shadow: inset 0 0 0 2rpx #f39c12;
}

.cell.same-number .cell-text {
  color: #d68910;
  font-weight: 700;
  font-size: 38rpx;
}

/* 错误抖动动画 */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.cell.error {
  animation: shake 0.4s ease;
}

/* 3x3宫格边框 - 加粗加深 */
.cell.border-right {
  border-right: 4rpx solid #1a202c;
}

.cell.border-bottom {
  border-bottom: 4rpx solid #1a202c;
}

/* 优先级：提示 > 错误 > 相同数字 > 选中 > 相关 */
.cell.error {
  background-color: #fed7d7 !important;
  box-shadow: inset 0 0 0 3rpx #f56565 !important;
}

.cell.error .cell-text {
  color: #c53030;
  font-weight: 700;
}

/* 提示状态 - 绿色高亮 */
.cell.hint-active {
  background: linear-gradient(135deg, #48bb78, #38a169) !important;
  box-shadow: 0 0 20rpx rgba(72, 187, 120, 0.6), inset 0 0 0 4rpx #2f855a !important;
  animation: hint-pulse 1.5s ease-in-out infinite;
  z-index: 20;
}

/* 提示数字样式 */
.hint-text {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 900;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  animation: hint-appear 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* 提示出现动画 */
@keyframes hint-appear {
  0% {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.2) rotate(0deg);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 提示脉冲动画 */
@keyframes hint-pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 20rpx rgba(72, 187, 120, 0.6), inset 0 0 0 4rpx #2f855a;
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 30rpx rgba(72, 187, 120, 0.9), inset 0 0 0 4rpx #2f855a;
  }
}

/* 暂停遮罩 */
.pause-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 30;
  animation: fade-in 0.3s ease;
}

.pause-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.pause-icon {
  font-size: 80rpx;
  color: #4299e1;
  animation: pause-bounce 2s ease-in-out infinite;
}

.pause-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2d3748;
}

.pause-hint {
  font-size: 24rpx;
  color: #718096;
}

/* 暂停图标弹跳动画 */
@keyframes pause-bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 淡入动画 */
@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 底部工具栏 - 改为跟随棋盘，不固定底部 */
.bottom-toolbar {
  background: #ffffff;
  border-top: 2rpx solid #e2e8f0;
  border-bottom: 2rpx solid #e2e8f0;
  padding: 12rpx 20rpx;
  margin: 16rpx -30rpx 0 -30rpx;  /* 负margin让工具栏与屏幕等宽 */
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 功能按钮行 - 更紧凑 */
.toolbar-actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
  padding: 0 5rpx;
}

.tool-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 3rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  min-width: 130rpx;
  transition: all 0.2s;
}

.tool-btn:active {
  transform: scale(0.95);
  background: #edf2f7;
}

.tool-btn.active {
  background: linear-gradient(135deg, #4299e1, #3182ce);
  border-color: #3182ce;
}

.tool-btn.active .tool-icon,
.tool-btn.active .tool-label {
  color: #ffffff;
}

.tool-btn:disabled {
  opacity: 0.4;
  transform: none;
}

.tool-icon {
  font-size: 28rpx;
  color: #4a5568;
}

.tool-label {
  font-size: 20rpx;
  color: #4a5568;
  font-weight: 500;
}

/* 数字网格 - 更紧凑 */
.number-grid {
  display: grid;
  grid-template-columns: repeat(9, 1fr);
  gap: 5rpx;
  margin-bottom: 10rpx;
}

/* 数字按钮 - 减小高度 */
.number-btn {
  height: 76rpx;
  background: #f7fafc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
  font-weight: bold;
  color: #4299e1;
  transition: all 0.2s;
  border: 2rpx solid #e2e8f0;
}

.number-btn:active {
  background: #4299e1;
  color: #ffffff;
  transform: scale(0.92);
  border-color: #3182ce;
}

/* 笔记模式样式 */
.number-btn.note-mode {
  background: #fef5e7;
  color: #d68910;
  border-color: #f39c12;
}

.number-btn.note-mode:active {
  background: #f39c12;
  color: #ffffff;
}

/* 操作按钮 */
.pad-actions {
  display: flex;
  gap: 12rpx;
}

.clear-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
  background: #f56565;
  color: #ffffff;
  font-weight: 500;
  line-height: 1;
}

