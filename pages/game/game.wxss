/* 数独棋盘 - 使用固定尺寸 */
.board {
  display: grid;
  grid-template-columns: repeat(9, 73rpx);  /* 直接指定每列宽度 */
  gap: 2rpx;  /* 格子之间的间距 */
  background-color: #2d3748;
  padding: 4rpx;  /* 外边距 */
  border-radius: 8rpx;
  margin: 0 auto 16rpx auto;  /* 增加底部间距 */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
  position: relative;
  transition: all 0.3s ease;
}

/* 暂停状态的棋盘 - 移除模糊效果 */
.board.paused {
  /* 不需要模糊效果 */
}

/* 暂停状态下隐藏3×3粗线 */
.board.paused .cell.border-right::after,
.board.paused .cell.border-bottom::before {
  display: none;
}

/* 单元格 - 宁静青蓝主题 */
.cell {
  width: 73rpx;
  height: 73rpx;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s ease;
  position: relative;
}

.cell-text {
  font-size: 36rpx;
  color: #2C5F5D;
  font-weight: 500;
  transition: all 0.15s ease;
}

/* 固定数字（初始题目） - 保持浅色 */
.cell.fixed {
  background-color: #F0F9F8;
}

.cell.fixed .cell-text {
  color: #2C5F5D;
  font-weight: 700;
}

/* 选中状态 - 深青蓝，更明显 */
.cell.selected {
  background-color: #7FCCC9 !important;
  box-shadow: inset 0 0 0 5rpx #4A8886;
  z-index: 10;
}

.cell.selected .cell-text {
  color: #FFFFFF;
  font-weight: 700;
  font-size: 42rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 相关区域（同行/同列/同宫格） - 明显的青色 */
.cell.related {
  background-color: #C8E8E7;
}

/* 相同数字高亮 */
.cell.same-number {
  background-color: #D4EDEC !important;
  box-shadow: inset 0 0 0 2rpx #7FCCC9;
}

.cell.same-number .cell-text {
  color: #5EAAA8;
  font-weight: 700;
  font-size: 38rpx;
}

/* 错误抖动动画 */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.cell.error {
  animation: shake 0.4s ease;
}

/* 3x3宫格边框 - 使用伪元素确保不被其他样式覆盖 */
.cell.border-right::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background-color: #1a202c;
  pointer-events: none;
  z-index: 100;
}

.cell.border-bottom::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: #1a202c;
  pointer-events: none;
  z-index: 100;
}

/* 优先级：提示 > 错误 > 相同数字 > 选中 > 相关 */
.cell.error {
  background-color: #FFF0F2 !important;
  box-shadow: inset 0 0 0 3rpx #E89BA3 !important;
}

.cell.error .cell-text {
  color: #E89BA3;
  font-weight: 700;
}

/* 提示状态 - 绿色高亮 */
.cell.hint-active {
  background: linear-gradient(135deg, #48bb78, #38a169) !important;
  box-shadow: 0 0 20rpx rgba(72, 187, 120, 0.6), inset 0 0 0 4rpx #2f855a !important;
  animation: hint-pulse 1.5s ease-in-out infinite;
  z-index: 20;
}

/* 提示数字样式 */
.hint-text {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 900;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  animation: hint-appear 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* 笔记模式：候选数字网格（3×3布局） */
.notes-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  gap: 0;
  padding: 2rpx;
}

.note-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 600;
  line-height: 1;
}

.note-cell.show {
  color: #5EAAA8;
  opacity: 1;
}

.note-cell.hide {
  color: transparent;
  opacity: 0;
}

/* 提示出现动画 */
@keyframes hint-appear {
  0% {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.2) rotate(0deg);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 提示脉冲动画 */
@keyframes hint-pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 20rpx rgba(72, 187, 120, 0.6), inset 0 0 0 4rpx #2f855a;
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 30rpx rgba(72, 187, 120, 0.9), inset 0 0 0 4rpx #2f855a;
  }
}

/* 暂停遮罩 */
.pause-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 30;
  animation: fade-in 0.3s ease;
}

.pause-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.pause-icon {
  font-size: 80rpx;
  color: #5EAAA8;
  animation: pause-bounce 2s ease-in-out infinite;
}

.pause-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2C5F5D;
}

.pause-hint {
  font-size: 24rpx;
  color: #6B9A99;
  margin-bottom: 20rpx;
}

/* 暂停界面操作按钮 */
.pause-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.pause-action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #5EAAA8, #4A8886);
  color: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx 32rpx;
  min-width: 160rpx;
  box-shadow: 0 4rpx 12rpx rgba(94, 170, 168, 0.3);
  transition: all 0.2s;
}

.pause-action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(94, 170, 168, 0.4);
}

.pause-action-icon {
  font-size: 40rpx;
  line-height: 1;
}

.pause-action-label {
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1;
}

/* 暂停图标弹跳动画 */
@keyframes pause-bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 淡入动画 */
@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 底部工具栏 - 改为跟随棋盘，不固定底部 */
.bottom-toolbar {
  background: #ffffff;
  border-top: 2rpx solid #e2e8f0;
  border-bottom: 2rpx solid #e2e8f0;
  padding: 12rpx 20rpx;
  margin: 16rpx -30rpx 0 -30rpx;  /* 负margin让工具栏与屏幕等宽 */
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 功能按钮行 - 更紧凑 */
.toolbar-actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 10rpx;
  padding: 0 5rpx;
}

.tool-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 3rpx;
  background: #f7fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  min-width: 130rpx;
  transition: all 0.2s;
}

.tool-btn:active {
  transform: scale(0.95);
  background: #edf2f7;
}

.tool-btn.active {
  background: linear-gradient(135deg, #5EAAA8, #4A8886);
  border-color: #5EAAA8;
  box-shadow: 0 0 16rpx rgba(94, 170, 168, 0.4);
  animation: tool-active-pulse 2s ease-in-out infinite;
}

.tool-btn.active .tool-icon,
.tool-btn.active .tool-label {
  color: #FFFFFF;
}

@keyframes tool-active-pulse {
  0%, 100% {
    box-shadow: 0 0 16rpx rgba(66, 153, 225, 0.5);
  }
  50% {
    box-shadow: 0 0 24rpx rgba(66, 153, 225, 0.8);
  }
}

.tool-btn:disabled {
  opacity: 0.4;
  transform: none;
}

.tool-icon {
  font-size: 28rpx;
  color: #5EAAA8;
}

.tool-label {
  font-size: 20rpx;
  color: #2C5F5D;
  font-weight: 500;
}

/* 数字网格 - 更紧凑 */
.number-grid {
  display: grid;
  grid-template-columns: repeat(9, 1fr);
  gap: 5rpx;
  margin-bottom: 10rpx;
}

/* 数字按钮 - 增大尺寸，显示剩余数量 */
.number-btn {
  height: 100rpx;
  background: #f7fafc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  transition: all 0.2s;
  border: 2rpx solid #e2e8f0;
  padding: 8rpx 0;
}

.number-main {
  font-size: 48rpx;
  font-weight: bold;
  color: #2C5F5D;
  line-height: 1;
}

.number-count {
  font-size: 20rpx;
  color: #9BBCBB;
  font-weight: 500;
  line-height: 1;
}

.number-btn:active {
  background: #B4E4E3;
  transform: scale(0.92);
  border-color: #5EAAA8;
}

.number-btn:active .number-main {
  color: #2C5F5D;
}

.number-btn:active .number-count {
  color: #5EAAA8;
}

/* 笔记模式样式 - 宁静青蓝 */
.number-btn.note-mode {
  background: linear-gradient(135deg, #D4EDEC, #B4E4E3);
  border: 3rpx solid #7FCCC9;
  box-shadow: 0 0 12rpx rgba(127, 204, 201, 0.3), inset 0 0 8rpx rgba(127, 204, 201, 0.1);
  animation: note-mode-pulse 1.5s ease-in-out infinite;
}

.number-btn.note-mode .number-main {
  color: #5EAAA8;
}

.number-btn.note-mode .number-count {
  color: #7FCCC9;
}

.number-btn.note-mode:active {
  background: #5EAAA8;
  transform: scale(0.92);
}

.number-btn.note-mode:active .number-main {
  color: #FFFFFF;
}

.number-btn.note-mode:active .number-count {
  color: #FFFFFF;
}

@keyframes note-mode-pulse {
  0%, 100% {
    box-shadow: 0 0 12rpx rgba(243, 156, 18, 0.4), inset 0 0 8rpx rgba(243, 156, 18, 0.1);
  }
  50% {
    box-shadow: 0 0 20rpx rgba(243, 156, 18, 0.6), inset 0 0 12rpx rgba(243, 156, 18, 0.2);
  }
}

