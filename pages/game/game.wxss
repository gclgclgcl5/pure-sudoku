/* 游戏页面样式 - 宁静青蓝主题 */
page {
  background-color: #F8FAFB;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #F8FAFB 0%, #EDF5F5 100%);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  padding-bottom: 20rpx; /* 减少底部留白 */
}

/* 顶部信息栏 - 更宽，字体更大 */
.info-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 20rpx;
  background: linear-gradient(135deg, #5EAAA8, #4A8886);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(94, 170, 168, 0.25);
  gap: 10rpx;
}

/* 信息项（通用，各占1/3） */
.info-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  flex: 1;
  min-width: 0;
}

.info-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  line-height: 1;
}

/* 难度显示（横向布局） */
.difficulty-item {
  flex-direction: row;
}

.difficulty-item .info-value {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
}

/* 错误计数 */
.error-item {
  gap: 6rpx;
}

.error-count {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
}

/* 计时器 */
.timer-item {
  gap: 6rpx;
}

.timer-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: bold;
  font-family: 'Courier New', monospace;
  line-height: 1;
  text-align: center;
}

/* 最佳时间 - 更紧凑 */
.best-time {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #D4EDEC;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.best-time-label {
  font-size: 22rpx;
  color: #6B9A99;
  font-weight: 500;
}

.best-time-value {
  font-size: 24rpx;
  color: #2C5F5D;
  font-weight: bold;
  font-family: 'Courier New', monospace;
}

