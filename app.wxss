/* 全局样式 */
page {
  background-color: #f0f2f5;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 全局变量 */
:root {
  --primary-color: #4299e1;
  --primary-dark: #3182ce;
  --text-primary: #1a202c;
  --text-secondary: #718096;
  --bg-primary: #f0f2f5;
  --cell-bg: #ffffff;
  --border-color: #2d3748;
}

