/* 全局样式 - 宁静青蓝主题 */
page {
  background-color: #F8FAFB;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 全局变量 - 宁静青蓝主题 */
:root {
  --primary-color: #5EAAA8;
  --primary-dark: #4A8886;
  --text-primary: #2C5F5D;
  --text-secondary: #6B9A99;
  --bg-primary: #F8FAFB;
  --cell-bg: #FFFFFF;
  --border-color: #8BBDBC;
}

